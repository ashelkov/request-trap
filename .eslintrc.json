{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["node", "eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "import/no-commonjs": 0,
        "import/no-nodejs-modules": 0
    }
}